<section class="home-header">
  <h1>Conheça alguns de nossos Pensamentos</h1>

  <form action="/" method="get">
    <input type="text" name="search" placeholder="Está buscando algo?" />
    <input type="submit" class="btn" value="Buscar" />
  </form>

  <div class="order-container">
    <span>Ordenar por: </span>
    <form action="/" method="get">
      <input type="hidden" name="search" value="{{this.search}}" />
      <input type="hidden" name="order" value="new" />
      <button type="submit">
        <i class="bi bi-arrow-up"></i>
        Mais novos
      </button>
    </form>

    <form action="/" method="get">
      <input type="hidden" name="search" value="{{this.search}}" />
      <input type="hidden" name="order" value="old" />
      <button type="submit">
        <i class="bi bi-arrow-down"></i>
        Mais antigos
      </button>
    </form>

    <a href="/">Limpar</a>
  </div>
</section>

<section class="toughts-container">
  {{#each toughts}}
    <figure>
      <blockquote>"{{this.titulo}}"</blockquote>
      <figcaption> Por: <span>{{this.user.email}}</span></figcaption>
    </figure>

  {{/each}}
</section>